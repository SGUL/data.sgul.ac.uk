## Basic Fuseki configuation file.
## 
## See also config_examples.ttl for commented examples.
## See also config_tdb.ttl for TDB specific examples.

@prefix :        <#> .
@prefix fuseki:  <http://jena.apache.org/fuseki#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix tdb:     <http://jena.hpl.hp.com/2008/tdb#> .
@prefix ja:      <http://jena.hpl.hp.com/2005/11/Assembler#> .

[] rdf:type fuseki:Server ;
   # Timeout - server-wide default: milliseconds.
   # Format 1: "1000" -- 1 second timeout
   # Format 2: "10000,60000" -- 10s timeout to first result, then 60s timeout to for rest of query.
   # See java doc for ARQ.queryTimeout
   # ja:context [ ja:cxtName "arq:queryTimeout" ;  ja:cxtValue "10000" ] ;

   # ja:loadClass "your.code.Class" ;

   fuseki:services (
     <#serviceFoaf1>
     <#serviceFoaf2>
     <#serviceVac>
   ) .

## Same one
<#serviceFoaf1> rdf:type fuseki:Service ;
    fuseki:name                     "Phonebook" ;
    fuseki:serviceQuery             "query" ;
    fuseki:serviceReadGraphStore    "get" ;
    fuseki:dataset                   <#foaf1> ;
    .
    
<#foaf1>    rdf:type ja:RDFDataset ;
    rdfs:label "Phonebook1" ;
    ja:defaultGraph 
      [ rdfs:label "foaf.ttl" ;
        a ja:MemoryModel ;
        ja:content [ja:externalContent <file:/root/data.sgul.ac.uk-deploy/data.sgul.ac.uk/cron/foaf.rdf> ] ;
      ] ;
    .

## ---------------------------------------------------------------
## Read-only access to a small books database.

<#serviceFoaf2> rdf:type fuseki:Service ;
    fuseki:name                     "Vacancies" ;
    fuseki:serviceQuery             "query" ;
    fuseki:serviceReadGraphStore    "get" ;
    fuseki:dataset                   <#vacancies> ;
    .
    
<#vacancies>    rdf:type ja:RDFDataset ;
    rdfs:label "Vacancies" ;
    ja:defaultGraph 
      [ rdfs:label "vacancies.ttl" ;
        a ja:MemoryModel ;
        ja:content [ja:externalContent <file:/root/data.sgul.ac.uk-deploy/data.sgul.ac.uk/static-site/output/jobs.rdf> ] ;
      ] ;
    tdb:unionDefaultGraph true .

<#serviceVac> rdf:type fuseki:Service ;
    fuseki:name                     "Vacancies2" ;
    fuseki:serviceQuery             "query" ;
    fuseki:serviceReadGraphStore    "get" ;
    fuseki:dataset                   <#vacancies2> ;
    .
    
<#vacancies2>    rdf:type ja:RDFDataset ;
    rdfs:label "Vacancies2" ;
    ja:defaultGraph 
      [ 
        a ja:MemoryModel ;
        ja:context [ja:externalContent <file:/root/data.sgul.ac.uk-deploy/data.sgul.ac.uk/static-site/output/jobs.rdf> ] ;
      ] ;
    tdb:unionDefaultGraph true .
        
